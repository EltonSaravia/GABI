<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permiso para usar internet -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Permiso para usar archivos  -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!-- Permiso para usar estado de la red -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permiso para envíos de SMS -->
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon_gabi"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_gabi"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme.GABI"
        tools:targetApi="31">

        <!-- Actividad para Administrador -->
        <activity
            android:name=".AdministradorActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

        <!-- Actividad Principal (Login) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad para Chat -->
        <activity android:name=".ChatActivity"
            android:screenOrientation="portrait"></activity>

        <!-- Actividad para Auxiliar -->
        <activity android:name=".auxiliares.AuxiliarActivity"
            android:screenOrientation="portrait"></activity>

        <!-- Actividad para Enfermería -->
        <activity android:name=".enfermeria.EnfermeriaActivity"
            android:screenOrientation="portrait"></activity>

        <activity android:name=".enfermeria.FormularioTratamientoActivity"
            android:screenOrientation="portrait"></activity>


        <!-- Nueva actividad para mostrar detalles de una administración -->
        <activity android:name=".enfermeria.DetalleAdministracionActivity"
            android:screenOrientation="portrait"></activity>

    </application>
</manifest>
