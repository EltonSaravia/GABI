<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#10425E"
    android:padding="8dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvHoraEvento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#F3EFEF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="4dp"/>

        <ImageView
            android:id="@+id/ivExpandIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_expand_more_24"
            android:contentDescription="@string/fab_transformation_scrim_behavior"
            android:padding="4dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvMotivoEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F3EFEF"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingBottom="4dp"/>

    <TextView
        android:id="@+id/tvNombreResidente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F3EFEF"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingBottom="4dp"/>

    <LinearLayout
        android:id="@+id/expandableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvLugarEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F3EFEF"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/tvDetallesEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</LinearLayout>
