<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/imagen_fondo_login"
    tools:context=".auxiliares.HomeAuxiliarFragment">

    <!-- Espaciador para empujar el CardView hacia abajo -->
    <View
        android:layout_width="match_parent"
        android:layout_height="220dp" /> <!-- Ajusta este valor según sea necesario -->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/custom_edittext"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tituloTexto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registro de Jornada"
                android:textAlignment="center"
                android:textColor="@color/turquesa"
                android:textSize="36sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnRegistrarEntrada"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/turquesa"
                android:text="Registrar Entrada"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btnRegistrarSalida"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/turquesa"
                android:text="Registrar Salida"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

            <!-- Botón de logout -->
            <Button
                android:id="@+id/btnLogoutAuxiliar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/black"
                android:text="Cerrar Sesión"
                android:textSize="14sp"
                app:cornerRadius="20dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
